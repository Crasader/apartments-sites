# default rules
blog:
  url:   /blog/:permalink
  param: { module: blog, action: read }

ourpage:
  url:   /ourpage/:permalink
  param: { module: ourpage, action: index }
  
ourpagenp:
  url:   /ourpage/*
  param: { module: ourpage, action: index }
  
homepage:
  url:   /
  param: { module: default, action: index }

default_index:
  url:   /:module
  param: { action: index }

default:
  url:   /:module/:action/*
